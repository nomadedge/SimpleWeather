@page "/"

@inherits IndexBase

<div id="weather-container">
    <div>
        <input @bind-value="CityName"
               @bind-value:event="onchange"
               id="city-input" />

        <button @onclick="DisplayWeatherAsync"
                id="show-input">
            Show weather
        </button>
    </div>

    @WeatherRender
</div>